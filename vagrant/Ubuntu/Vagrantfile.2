# Every Vagrant development environment requires a box. You can search for
BOX = "ubuntu/focal64"
BOX_VERSION = "20220324.0.0"
SUBNET = "192.168.63"

nodes = [
    {:name => "m-k8s", :cpu => 2, :mem => 3084, :ip => "%s.100" % [SUBNET], :ssh_port => 50100}
#     {:name => "w1-k8s", :cpu => 1, :mem => 2060, :ip => "%s.101" % [load_subnet], :ssh_port => 50101},
#     {:name => "w2-k8s", :cpu => 1, :mem => 2060, :ip => "%s.102" % [load_subnet], :ssh_port => 50102},
]

VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

  config.vm.box = BOX
  config.vm.box_version = BOX_VERSION

  nodes.each do |opts|
    config.vm.define opts[:name] do |cfg|
        cfg.vm.hostname = "%s" % opts[:name]
        cfg.vm.network :private_network, ip: opts[:ip]
        cfg.vm.network :forwarded_port, guest: 22, host: opts[:ssh_port], auto_correct: false, id: "ssh"
        cfg.vm.provider :virtualbox do |vb|
          vb.customize ["modifyvm", :id, "--cpus", opts[:cpu] || 1 ]
          vb.customize ["modifyvm", :id, "--memory", opts[:mem] || 2048 ]
          vb.customize ["modifyvm", :id, "--uartmode1", "disconnected"]
        end
        cfg.vm.synced_folder ".", "/vagrant", type: "virtualbox", disabled: false
        cfg.vm.provision "shell", path: "config.sh", args: N
        cfg.vm.provision "shell", path: "install_pkg.sh"
    end
  end

end
